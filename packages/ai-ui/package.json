{
  "name": "@mrszlv/ai-ui-components",
  "version": "0.1.2",
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./dist/index.css": "./dist/index.css"
  },
  "engines": {
    "node": ">=18"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "prebuild:css": "node scripts/mkdir-dist.cjs",
    "build:css": "npx tailwindcss -i src/tailwind.css -o dist/index.css --minify",
    "build:all": "npm run build && npm run build:css",
    "clean": "rimraf dist",
    "prepare": "husky install"
  }
}
