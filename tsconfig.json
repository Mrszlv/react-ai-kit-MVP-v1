{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    "baseUrl": ".",
    "paths": {
      "@ai-ui/components": ["packages/ai-ui/src"],
      "@ai-ui/components/*": ["packages/ai-ui/src/*"]
    },

    "types": ["vite/client", "node"],
    "verbatimModuleSyntax": true
  },
  "include": ["src", "packages/ai-ui/src", "vite.config.ts"]
}
